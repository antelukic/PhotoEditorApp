<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/editPhotoFragment"
        android:name="com.photoeditor.app.presentation.addfilter.AddFilterFragment"
        android:label="fragment_edit_photo"
        tools:layout="@layout/fragment_add_filter">
        <action
            android:id="@+id/action_editPhotoFragment_to_cropImageFragment"
            app:destination="@id/cropImageFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.photoeditor.app.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_editPhotoFragment"
            app:destination="@id/editPhotoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cropImageFragment"
            app:destination="@id/cropImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/cropImageFragment"
        android:name="com.photoeditor.app.presentation.cropimage.CropImageFragment"
        android:label="fragment_crop_image"
        tools:layout="@layout/fragment_crop_image" />
</navigation>
